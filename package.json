{
  "name": "master-prompt-editor-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Root for the Master-Prompt-Editor monorepo",
  "scripts": {
    "install:all": "npm install && npm install --prefix server && npm install --prefix client && npm install --prefix cli",
    "build:all": "tsc --build --verbose && npm run build --prefix cli",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "lint:all": "eslint . --ext .ts,.tsx",
    "mpe": "node cli/dist/index.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0"
  },
  "bin": {
    "mpe": "cli/dist/index.js"
  }
}
